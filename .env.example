# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Encryption Key for 2FA and sensitive data (generate a secure random string)
# CRITICAL: This should NOT have NEXT_PUBLIC_ prefix - it should be server-side only
ENCRYPTION_KEY=your_secure_encryption_key_here

# Optional: Analytics and monitoring
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Optional: Error tracking
SENTRY_DSN=your_sentry_dsn

# Development only
NODE_ENV=development

# Optional: Additional configuration
# VITE_APP_NAME=Supa-Auth
# VITE_APP_DESCRIPTION=Modern authentication and team management
